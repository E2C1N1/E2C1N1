<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.mateusz.apptest.Projector"
    android:id="@+id/layout"
    android:background="#00ffffff">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/gridLayout">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right"
            android:background="@drawable/powoff" />

    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Information...."
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gridLayout"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Source Selector"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:textColor="#ff000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="HDMI 1"
                android:id="@+id/button4"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue" />

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="HDMI 2"
                android:id="@+id/button5"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Video"
                android:id="@+id/button6"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="VGA 1"
                android:id="@+id/button7"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="VGA 2"
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="S-VIDEO"
                android:id="@+id/button9"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="A/V Control"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:textColor="#ff000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:id="@+id/button10"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_span="2"
                android:text="AV Mute"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="VOL +"
                android:id="@+id/button12"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Freeze"
                android:id="@+id/button13"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_span="2"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="VOL -"
                android:id="@+id/button15"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tableLayout2"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Information"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:textColor="#ff000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Lamp"
                android:id="@+id/button11"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Status"
                android:id="@+id/button14"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Model"
                android:id="@+id/button16"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/btn_default_normal_lblue"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
